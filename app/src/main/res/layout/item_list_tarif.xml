<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardTarif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImg"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:scaleType="centerCrop"
                android:src="@drawable/new_xit"
                app:civ_border_color="@color/yellow"
                app:civ_border_width="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textTarif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="ZO'R 2"
                android:textColor="@color/beeline_black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/circleImg"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/moneyImg"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_cash"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/circleImg" />

            <TextView
                android:id="@+id/textMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="20000 so'm"
                android:textColor="@color/beeline_black"
                app:layout_constraintBottom_toBottomOf="@id/moneyImg"
                app:layout_constraintStart_toEndOf="@id/moneyImg"
                app:layout_constraintTop_toTopOf="@id/moneyImg" />

            <ImageView
                android:id="@+id/callImg"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_telephone"
                app:layout_constraintStart_toEndOf="@id/textMoney"
                app:layout_constraintTop_toTopOf="@id/moneyImg" />

            <TextView
                android:id="@+id/textCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="2000 min"
                android:textColor="@color/beeline_black"
                app:layout_constraintBottom_toBottomOf="@id/callImg"
                app:layout_constraintStart_toEndOf="@id/callImg"
                app:layout_constraintTop_toTopOf="@id/callImg" />

            <ImageView
                android:id="@+id/netImg"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_earth_grid_symbol"
                app:layout_constraintStart_toEndOf="@id/textCall"
                app:layout_constraintTop_toTopOf="@id/moneyImg" />

            <TextView
                android:id="@+id/textNet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="2000 MB"
                android:textColor="@color/beeline_black"
                app:layout_constraintBottom_toBottomOf="@id/netImg"
                app:layout_constraintStart_toEndOf="@id/netImg"
                app:layout_constraintTop_toTopOf="@id/netImg" />

            <ImageView
                android:id="@+id/messageImg"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_telephone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/moneyImg" />

            <TextView
                android:id="@+id/textMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="2000"
                android:textColor="@color/beeline_black"
                app:layout_constraintBottom_toBottomOf="@id/messageImg"
                app:layout_constraintStart_toEndOf="@id/messageImg"
                app:layout_constraintTop_toTopOf="@id/messageImg" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_right"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>